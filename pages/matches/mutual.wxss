/* pages/matches/mutual.wxss */
page {
  height: 100%;
  background-image: var(--gradient);
  font-family: "Quicksand";
  color: var(--white);
}

image {
  margin-right: .5rem;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 80vh;
  background-position: center;
  background-size: cover;
  background-repeat: no-repeat;
}

.app {
  margin-top: .5em;
}

.h1{
  position: fixed;
  top: 15%;
  color: var(--white);
  margin-bottom: 1.5rem;
}

.match-image {
  position: absolute;
  width: 300rpx;
  height: 400rpx;
  border-radius: 20rpx;
  border: 6rpx solid var(--white);
}

.match-image-left {
  right: -120%;
  background: aqua;
}

.match-image-right {
  left: -120%;
  background: red;
}


.btn-icon {
  width: 80rpx;
}

.btn-text{
  vertical-align: middle;
  margin: auto;
}

navigator {
  position: fixed;
  bottom: 15%;
  align-items: center;
}

navigator image {
  margin-bottom: .3rem;
}