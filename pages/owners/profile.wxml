<!--pages/users/profile.wxml-->
<view class="container">

  <!-- Profile card -->
  <view class="profile-card flex ai-c">
    <view class="owner-dog-avatar">
      <image class="avatar-user-lg" src="https://images.unsplash.com/photo-1508214751196-bcfd4ca60f91?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1170&q=80" mode="aspectFill" />
      <image class="avatar-dog" src="https://images.unsplash.com/photo-1575383095193-52195a64e3a6?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1yZWxhdGVkfDV8fHxlbnwwfHx8fHw%3D&auto=format&fit=crop&w=500&q=60" mode="aspectFill" />
    </view>
    <view class="flex column">
      <text class="p p-pink">Welcome back!</text>
      <text class="h3">Sammi & Baoan</text>
    </view>
  </view>

  <!-- Separator -->
  <view>
    <image class="separator" src="../images/separator.png" alt="" />
  </view>

  <!-- Tabs -->
  <view class="tabs">
    <navigator url="#" class="setting-card flex">
      <view class="flex ai-c">
        <image class="icon" src="/pages/images/icons/profile-user_icon.png" mode="" />
        <text> Edit User info </text>
      </view>
      <image class="icon" src="/pages/images/icons/profile-arrow.png" class="arrow" mode="" />
    </navigator>
    <navigator url="/pages/dogs/form" class="setting-card flex">
      <view class="flex ai-c">
        <image class="icon" src="/pages/images/icons/profile-dog.png" mode="" />
        <text> Edit dog's info </text>
      </view>
      <image class="icon" src="/pages/images/icons/profile-arrow.png" class="arrow" mode="" />
    </navigator>
    <navigator url="#" class="setting-card flex">
      <view class="flex ai-c">
        <image class="icon" src="/pages/images/icons/profile-settings_icon.png" mode="" />
        <text> Set your preferences </text>
      </view>
      <image class="icon" src="/pages/images/icons/profile-arrow.png" class="arrow" mode="" />
    </navigator>
  </view>
</view>