.banner {
  background: linear-gradient(180deg, #FCA984 0%, #DE6089 100%);
}

.h1 {
  color: var(--white);
  margin-bottom: .1em;
  text-align: left;
}

/* Categories */
.categories {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
  margin-top: .5rem;
}

.category {
  flex-basis: 50%;
  max-width: 49%;
  background-color: var(--white);
  padding: .5rem 1rem;
  box-sizing: border-box;
  box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.17);
}

.category-icon {
  display: inline-block;
  width: 64rpx;
  height: 64rpx;
  margin-right: .5em;
}

/* Ad */
.ad {
  width: 100%;
  max-height: 24vh;
}

/* Events */
.header {
  justify-content: space-between;
}

.header .p-pink {
  text-transform: uppercase;
}