
.id-text {
  font-size: 48rpx;
}

.name-text {
  font-size: 64rpx;
}

.mp-swipe-card-item {
  /* height: 100%;
  width: 100%;*/
  height: 100%;
  margin: 20rpx;
  /* background: linear-gradient(to right bottom, red, orange, green, purple); */
}

.item {
  position: relative;
  padding: 20rpx;
  border-radius: 20rpx;
  height: 65%;
  background-position: center;
  background-size: cover;
  background-repeat: no-repeat;
}

.item-data {
  position: absolute;
  bottom: 5%;
}

.item::before{
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(180deg, rgba(0, 0, 0, 0) 0%, rgba(255, 255, 255, 0.3) 100%);
}

.item-name {
  margin-bottom: .3em;
}

.avatar-user {
  width: 200rpx;
  height: 200rpx;
  border-radius: 18rpx;
  border: white 1px solid;
  margin-right: 20rpx;
}


/* Neutered, vaccinated */
.dog-attribute {
  border-radius: 100rpx;
  padding: .5em .7em;
  font-size: 28rpx;
  margin-right: 20rpx;
}

.attribute-true {
  background-color: var(--accent-pink);    
  color: var(--white);
}

.attribute-false {
  border: solid 2rpx var(--grey-dark);
  color: var(--dark);
  background-color: var(--white);
}

.quality-icon {
  width: 60rpx;
  height: 60rpx;
}

/* Flex-properties */
.flex {
  display: flex;
}

.column {
  flex-direction: column;
}

.ai-c {
    align-items: center;
}

.jc-c {
    justify-content: center;
}

.jc-sb {
    justify-content: space-between;
}


/* Typography */
.h1,
.h2, 
.h3
{
  color: var(--dark);
  font-family: 'Quicksand', sans-serif;
  font-weight: bold;
  line-height: 1.15;
  text-transform: capitalize;
}

.h1 {
  font-size: 64rpx;
  text-align: center;
}
