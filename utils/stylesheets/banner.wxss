.banner {
  overflow: hidden;
  height: 16vh;
  background: linear-gradient(180deg, #FCA984 0%, #DE6089 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: var(--white);
  font-size: .85rem;
}

.banner-dark::before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 386rpx;
  background: linear-gradient(180deg, rgba(0, 0, 0, 0.17) 0%, rgba(0, 0, 0, 0.83) 100%);
}

.banner text {
  z-index: 3;
}
