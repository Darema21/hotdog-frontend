.breed-image {
    width: 320rpx;
    height: 320rpx;
    margin: 32rpx 0;
}

.breed-description {
    background-color: var(--white);
    background-color: var(--white);
    border-top-left-radius: 40rpx;
    border-top-right-radius: 40rpx;
}

.breed-qualities {
    display: flex;
    flex-wrap: wrap;
    gap: 10rpx;
}

.breed-quality {
    background-color: var(--accent-pink);
    border-radius: 100rpx;
    padding: 16rpx 32rpx;
    color: var(--white);
    font-size: 28rpx;
}

.separator {
    display: inline-block;
    width: 100%;
    height: 40px;
}