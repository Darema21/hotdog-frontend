.btn {
  color: var(--white);
  padding: 8rpx 24rpx;
  border-radius: 10rpx;
}

.btn-filled{
  background: var(--primary-color);
  padding: 8rpx 24rpx;
  border-radius: 10rpx;
}

.btn-v{
  color: #4A4A4A;
  border: 1rpx solid #4A4A4A;
  padding: 8rpx 24rpx;
  border-radius: 50rpx;
  font-weight: lighter;
  opacity: 0.6;
}

.btn-v-filled {
  color: var(--gradient);
  padding: 8rpx 24rpx;
  border-radius: 50%;
}

.btn-decision {
    width: 160rpx;
    height: 160rpx;
    border-radius: 50%;
    box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
  }  

.btn-no{
  background: var(--white);
}

.btn-superlike{
  background-color: var(--accent-yellow);
}

.btn-yes{
  background-color: var(--gradient);
}


/* Neutered, vaccinated */
.dog-attribute {
    border-radius: 100rpx;
    padding: .5em 1.2rem;
    font-size: 28rpx;
    margin-right: 20rpx;
}

.attribute-true {
    background-color: var(--accent-pink);    
    color: var(--white);
}

.attribute-false {
    border: solid 2rpx var(--grey-dark);
    color: var(--grey-dark);
}

.quality-icon {
    width: 60rpx;
    height: 60rpx;
    margin-right: .2em;
}