<!--pages/matches/show.wxml-->
<view class="banner">
  <view>
    <image class="avatar-user avatar-user-sm" src="owner_image_url" mode="aspectFill" />

    <image class="avatar-dog" src="https://images.unsplash.com/photo-1575383095193-52195a64e3a6?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1yZWxhdGVkfDV8fHxlbnwwfHx8fHw%3D&auto=format&fit=crop&w=500&q=60" mode="aspectFill" />
  </view>
  <text class="h3">{{ owner_name }} & {{ dog_name }}</text>
</view>

<!--Comment Cards-->
<view class="cards">
    <view class="card" wx:for="{{comments}}" wx:for-item="comment" bindtap="goToShow" data-id="{{comment.id}}">
      <text>{{comment}}</text>
    </view>
</view>

<!--Comment Form-->
<view class="container">
  <view class="comments">
    <form bindsubmit="addComment">
      <textarea name="comment" placeholder="Send Message Here" bindconfirm="addComment"></textarea>
    </form>
  </view>
</view>