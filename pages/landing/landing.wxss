/* pages/landing/landing.wxss */
page {
  background-image: var(--gradient);
  font-family: "Quicksand";
  color: var(--white);
}

image {
  margin-right: .5rem;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 80vh;
  background-position: center;
  background-size: cover;
  background-repeat: no-repeat;
}

.app {
  margin-top: .5em;
}

.app-name{
  font-family: 'Quicksand', sans-serif;
  font-size: 96rpx;
  font-weight: bold;
}

.app-logo {
  width: 128rpx;
  height: 120rpx;
  margin: 1em;
}

.btn-icon {
  width: 80rpx;
}

.btn-text{
  vertical-align: middle;
  margin: auto;
}

navigator {
  position: fixed;
  bottom: 10%;
  align-items: center;
}

navigator image {
  margin-bottom: .3rem;
}