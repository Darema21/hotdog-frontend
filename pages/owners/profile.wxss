/* pages/users/profile.wxss */

.profile-card {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-evenly;
  margin-bottom: 20rpx;
  background-color: var(--white);
  padding: 1rem .5rem;
  border-radius: 18rpx;
}

.profile-owner {
  position: relative;
  top: 0;
  left: 0;
}

.profile-dog-avatar {
  position: absolute;
  top: 200rpx;
  left: 220rpx;
}

image {
  width: 45rpx;
  height: 45rpx;
}

.arrow {
  float: right;
  margin-top: 30rpx;
}

.avatar-dog {
  margin-left: -2em;
}

.setting-card {
  justify-content: space-between;
  line-height: 100rpx;
  background-color: var(--white);
  border-radius: 18rpx;
  padding: 20rpx;
  margin-top: .3em;
}

.icon {
  margin-right: 20rpx;
}