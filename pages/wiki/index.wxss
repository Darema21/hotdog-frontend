.banner {
  background-image: url('https://i.imgur.com/HDCCYo5.png');
  background-position: bottom;
  background-size: initial;
  min-height: 30vh;
}

.banner image {
  width: 100vw;
}

.h1 {
  color: var(--white);
}

.wrap {
  background-color: var(--white);
  border-top-left-radius: 40rpx;
  border-top-right-radius: 40rpx;
  z-index: 4;
  margin-top: -10%;
}

.flexbox {
  display: flex;
