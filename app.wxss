/**app.wxss**/

@import "./utils/stylesheets/banner.wxss";
@import "./utils/stylesheets/colors.wxss";
@import "./utils/stylesheets/flexbox.wxss";
@import "./utils/stylesheets/typography.wxss";

page {
  margin: 0;
  padding: 0;
  font-family: "Quicksand", sans-serif;
  font-size: 32rpx;
  overflow-x: hidden;
  background-color: var(--background-color);
}

button {
  display: inline-block;
}

.container {
  width: 90%;
  margin: 0 auto;
  display: flex;
  flex-direction: column;
  padding: 32rpx 0;
}

